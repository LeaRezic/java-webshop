<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>src.com.webshop.DAL.Entities.CityEntity</class>
        <class>src.com.webshop.DAL.Entities.CountryEntity</class>
        <class>src.com.webshop.DAL.Entities.ExpansionDetailsEntity</class>
        <class>src.com.webshop.DAL.Entities.GameDetailsEntity</class>
        <class>src.com.webshop.DAL.Entities.ProductEntity</class>
        <class>src.com.webshop.DAL.Entities.ProductCategoryEntity</class>
        <class>src.com.webshop.DAL.Entities.ProductManufacturerEntity</class>
        <class>src.com.webshop.DAL.Entities.ProductSubcategoryEntity</class>
        <class>src.com.webshop.DAL.Entities.ReceiptEntity</class>
        <class>src.com.webshop.DAL.Entities.ReceiptItemEntity</class>
        <class>src.com.webshop.DAL.Entities.RoleEntity</class>
        <class>src.com.webshop.DAL.Entities.UserAccountEntity</class>
        <class>src.com.webshop.DAL.Entities.UserDetailsEntity</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/webshop"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="webshop"/>
            <property name="hibernate.connection.password" value="webshop"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>

    </persistence-unit>
</persistence>
