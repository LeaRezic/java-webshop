<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login/verify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/login/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShopDataServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.ShopDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopDataServlet</servlet-name>
        <url-pattern>/shopdata</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReceiptServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.ReceiptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiptServlet</servlet-name>
        <url-pattern>/auth/receipt</url-pattern>
        <url-pattern>/admin/receipt</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginLogServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.LoginLogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginLogServlet</servlet-name>
        <url-pattern>/admin/loginlogs</url-pattern>
        <url-pattern>/admin/loginlogs/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>src.com.webshop.Servlet.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>localAllowOrigin</param-name>
        <param-value>http://localhost:3000</param-value>
    </context-param>
    <context-param>
        <param-name>remoteAllowOrigin</param-name>
        <param-value>https://learezic.from.hr</param-value>
    </context-param>

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>src.com.webshop.Filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TokenFilter</filter-name>
        <filter-class>src.com.webshop.Filter.TokenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TokenFilter</filter-name>
        <url-pattern>/auth/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>src.com.webshop.Filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>